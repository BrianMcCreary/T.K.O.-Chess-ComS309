<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey">

    <ImageButton
        android:id="@+id/JoinLobbytoMenuBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="19dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/goes_back_to_main_menu"
        android:padding="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_backbtn" />

    <TextView
        android:id="@+id/JoinLobbyNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Lobby"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/JoinLobbytoMenuBtn"
        app:layout_constraintBottom_toBottomOf="@+id/JoinLobbytoMenuBtn"/>

    <ScrollView
        android:id="@+id/JoinLobbyScrollView"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="30dp"
        android:background="@color/very_light_grey"
        android:contentDescription="@string/scrollview_holding_a_user_s_friends"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/JoinLobbyNameText">

        <LinearLayout
            android:id="@+id/JoinLobbyLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/JoinReadytoStartText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Ready to play?"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/JoinLobbyScrollView" />

    <Button
        android:id="@+id/JoinReadyUpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/soft_blue"
        android:text="Ready up"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/JoinReadytoStartText"
        app:layout_constraintStart_toStartOf="@+id/JoinReadytoStartText"
        app:layout_constraintTop_toBottomOf="@+id/JoinReadytoStartText" />

    <Button
        android:id="@+id/JoinStartGameBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/soft_blue"
        android:text="Start Game"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/JoinReadyUpBtn"
        app:layout_constraintStart_toStartOf="@+id/JoinReadyUpBtn"
        app:layout_constraintTop_toBottomOf="@+id/JoinReadyUpBtn" />

    <TextView
        android:id="@+id/JoinChangeGameSettingsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Game Settings"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/JoinStartGameBtn"
        app:layout_constraintStart_toStartOf="@+id/JoinStartGameBtn"
        app:layout_constraintTop_toBottomOf="@+id/JoinStartGameBtn" />

    <Button
        android:id="@+id/JoinChangeSettingsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/soft_blue"
        android:text="Change Settings"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/JoinChangeGameSettingsText"
        app:layout_constraintStart_toStartOf="@+id/JoinChangeGameSettingsText"
        app:layout_constraintTop_toBottomOf="@+id/JoinChangeGameSettingsText" />
</androidx.constraintlayout.widget.ConstraintLayout>